package cars;

public class car {
	private int price;

	public car() {
		this.price = 0;
	}

	public car(int price) {
		this();
		setPrice(price);
	}

	public int getPrice() {

		return price;
	}

	public void setPrice(int price) {
		
			this.price = price;
		}
	
	public void carPrice(){
		System.out.printf("The car price is : %d. \n", this.price);
		
	}
}
