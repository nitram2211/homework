package cars;

public class car {
	private int price;
	
	
public car(){
	this.price = 0;
}




public car(int price){
	this();
	setPrice(price);
}


public int getPrice() {
	
	return price;
}


public void setPrice(int price) {
	if(price >= 0){
		this.price = price;
	}
}




public void sayCar(boolean identify){
	System.out.println("cars");
	
	if(identify){
		sayPrice();
	}
}
private void sayPrice(){
	System.out.printf("The price of the car is: %d", this.price);
	System.out.println();
}
}